{
  "name": "BrowserQuest",
  "version": "0.0.1",
  "private": false,
  "description": "HTML5/JavaScript multiplayer game experiment",
  "main": "server/js/main.js",
  "scripts": {
    "start": "node server/js/main.js",
    "server:start": "./browserquest.sh start",
    "server:stop": "./browserquest.sh stop",
    "server:restart": "./browserquest.sh restart",
    "server:status": "./browserquest.sh status",
    "server:logs": "./browserquest.sh logs",
    "test": "jest",
    "build": "cd bin && ./build.sh",
    "lint": "eslint server/js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'Install pre-commit: pip install pre-commit'"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "underscore": "^1.13.7",
    "sanitizer": "^0.1.3",
    "bison": "1.1.1",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "memcached": "^2.2.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2"
  },
  "keywords": [
    "game",
    "html5",
    "websocket",
    "multiplayer",
    "mmorpg"
  ],
  "license": "MPL-2.0"
}
